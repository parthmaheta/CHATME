<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@mipmap/profile_img_round"
     android:id="@+id/request_img"/>

    <TextView
        android:id="@+id/request_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/request_img"
        android:text="name"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/request_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_name"
        android:layout_toRightOf="@id/request_img"
        android:text="Accept" />

    <Button
        android:id="@+id/request_reject_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/request_name"
        android:layout_toRightOf="@id/request_accept_btn"
        android:text="Reject" />
</RelativeLayout>