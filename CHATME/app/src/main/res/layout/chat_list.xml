<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_friend_img"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@mipmap/profile_img_round"
        />

    <TextView
        android:id="@+id/chat_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_friend_img"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/chat_friend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_friend_img"
        android:layout_alignBottom="@id/chat_friend_img"
        android:text="Hii..?"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/chat_friend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:text="10:12" />

</RelativeLayout>