<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatme">
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
         android:theme="@style/AppTheme">
        <activity android:name=".ChangePassword" />
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterPage" />
        <activity android:name=".Main" android:configChanges="orientation|screenSize" />
        <activity android:name=".OtpPage"></activity>
        <activity android:name=".ForgotPassword" />
        <activity android:name=".ChatScreen"></activity>
        <activity android:name=".Profile_Detail"></activity>
        <activity android:name=".View_Img"></activity>
    </application>

</manifest>